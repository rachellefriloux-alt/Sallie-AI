{
  "expo": {
    "name": "Sallie Sovereign",
    "slug": "sallie-sovereign",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sallie",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.yourorg.sallie"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "@sallie/plugin-injection",
        {
          "buildConfigurations": {
            "development": {
              "android": {
                "plugins": ["core-ai-orchestrator", "voice-visualization", "advanced-theming"],
                "parameters": {
                  "DEBUG_MODE": true,
                  "PLUGIN_INJECTION_ENABLED": true
                }
              },
              "ios": {
                "plugins": ["core-ai-orchestrator", "emotional-intelligence", "advanced-theming"],
                "parameters": {
                  "DEBUG_MODE": true,
                  "PLUGIN_INJECTION_ENABLED": true
                }
              },
              "web": {
                "plugins": ["core-ai-orchestrator", "advanced-theming"],
                "parameters": {
                  "DEBUG_MODE": true,
                  "WEB_OPTIMIZATION": false
                }
              }
            },
            "production": {
              "android": {
                "plugins": ["core-ai-orchestrator", "emotional-intelligence", "real-time-processing"],
                "parameters": {
                  "DEBUG_MODE": false,
                  "OPTIMIZATION_LEVEL": "aggressive",
                  "PLUGIN_INJECTION_ENABLED": true
                }
              },
              "ios": {
                "plugins": ["core-ai-orchestrator", "emotional-intelligence", "real-time-processing"],
                "parameters": {
                  "DEBUG_MODE": false,
                  "OPTIMIZATION_LEVEL": "aggressive",
                  "PLUGIN_INJECTION_ENABLED": true
                }
              },
              "web": {
                "plugins": ["core-ai-orchestrator", "advanced-theming"],
                "parameters": {
                  "DEBUG_MODE": false,
                  "WEB_OPTIMIZATION": true,
                  "BUNDLE_ANALYZER": false
                }
              }
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
